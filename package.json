{
  "name": "app",
  "private": "true",
  "dependencies": {
    "esbuild": "^0.15.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "ts-check": "tsc --project tsconfig.json --noEmit --watch --preserveWatchOutput",
    "lint": "eslint app/javascript app/ui --fix",
    "format": "prettier --config .prettierrc 'app/ui/**/*.ts' 'app/ui/**/*.tsx' 'app/javascript/**/*.ts' 'app/javascript/**/*.tsx' --write --no-error-on-unmatched-pattern"
  },
  "devDependencies": {
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-plugin-react": "^7.31.8",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  }
}
